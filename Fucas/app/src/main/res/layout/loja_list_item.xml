<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardElevation="3dp"
            app:cardCornerRadius="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/list_img_loja"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:src="@drawable/justaburger"
                    android:layout_margin="8dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
            />

            <TextView
                    android:id="@+id/list_txt_nome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Just a burguer"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginLeft="16dp"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toRightOf="@id/list_img_loja"
                    app:layout_constraintTop_toTopOf="@id/list_img_loja"
                    android:layout_marginStart="16dp"/>

            <TextView
                    android:id="@+id/list_txt_descricao"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginRight="16dp"
                    android:text="Hamburgueres suculentos com a mais fina picanha ao molho barbecue. "
                    app:layout_constraintTop_toBottomOf="@id/list_txt_nome"
                    app:layout_constraintLeft_toLeftOf="@id/list_txt_nome"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/list_img_avaliacao"
            />

            <ImageView
                    android:id="@+id/list_img_avaliacao"
                    android:layout_width="20dp"
                    android:layout_height="0dp"
                    android:src="@drawable/avaliacao"
                    android:layout_marginTop="3dp"
                    app:layout_constraintLeft_toLeftOf="@id/list_txt_nome"
                    app:layout_constraintBottom_toBottomOf="@id/list_img_loja"
                    app:layout_constraintTop_toTopOf="@id/list_txt_avaliacao"

            />
            <TextView
                    android:id="@+id/list_txt_avaliacao"
                    android:text="4.7"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFC107"
                    app:layout_constraintLeft_toRightOf="@id/list_img_avaliacao"
                    app:layout_constraintBottom_toBottomOf="@id/list_img_avaliacao"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>